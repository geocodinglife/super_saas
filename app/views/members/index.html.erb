<%= link_to "New member", new_member_path %>
<h3>
  <div class="text-center">
    <%= controller_name.humanize + ":" %>
    <%= action_name.humanize %>
    <div class="big-info">
      <%= @members.count %>
    </div>
  </div>
</h3>
<table class="table table-striped table-bordered table-hover">
  <thead>
    <tr>
      <th>id</th>
      <th>Users</th>
    </tr>
  </thead>
  <tbody>
    <% @members.each do |member| %>
      <tr>
        <td>
          <%= member.id %>
        </td>
        <td>
          <%= member.user.email %>
        </td>

        <td>
          <%= member.tenant.name %>
        </td>
        <td>
          <%= link_to 'Show', member_path(member.id) %>
        </td>
        <td>
          <%= link_to 'Edit', edit_member_path(member.id) %>
        </td>
        <td>
          <%= button_to 'Destroy', member_path(member.id), method: :delete, data: { confirm: 'Are you sure?' } %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>
<br/>

<hr />

<%= form_tag invite_members_path, method: :get do %>
  <%= email_field_tag 'email' %>
  <%= submit_tag 'Invite a Member' %>
<% end %>
